<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragments_background">

    <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        tools:context=".view.details.DetailsFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/detailsMainView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp">

            <TextView
                android:id="@+id/original_title_movie_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/localized_movie_name_details" />

            <TextView
                android:id="@+id/title_movie_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textSize="18sp"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/original_title_movie_details"
                tools:text="@string/original_movie_name_details" />

            <ImageView
                android:id="@+id/iv_poster"
                android:layout_width="150dp"
                android:layout_height="220dp"
                android:contentDescription="@string/imageviewPoster"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_movie_details" />

            <TextView
                android:id="@+id/genre_movie_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_poster"
                app:layout_constraintTop_toTopOf="@+id/iv_poster"
                tools:text="@string/movie_genres_details" />

            <TextView
                android:id="@+id/duration_movie_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_poster"
                app:layout_constraintTop_toBottomOf="@+id/genre_movie_details"
                tools:text="@string/duration_details" />

            <TextView
                android:id="@+id/rating_movie_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/iv_poster"
                app:layout_constraintTop_toBottomOf="@+id/duration_movie_details"
                tools:text="@string/rating_details" />

            <ImageView
                android:id="@+id/star_icon_movie_details"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:contentDescription="@string/starIcon"
                app:layout_constraintBottom_toBottomOf="@+id/rating_movie_details"
                app:layout_constraintStart_toEndOf="@+id/rating_movie_details"
                app:layout_constraintTop_toTopOf="@+id/rating_movie_details"
                app:srcCompat="@android:drawable/btn_star_big_on" />

            <TextView
                android:id="@+id/budget_placeholder_movie_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@string/budget_placeholder_details"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/iv_poster"
                app:layout_constraintTop_toBottomOf="@+id/rating_movie_details" />

            <TextView
                android:id="@+id/budget_value_movie_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/budget_placeholder_movie_details"
                app:layout_constraintStart_toEndOf="@+id/budget_placeholder_movie_details"
                app:layout_constraintTop_toTopOf="@+id/budget_placeholder_movie_details"
                tools:text="@string/budget_value_details" />

            <TextView
                android:id="@+id/revenue_placeholder_movie_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@string/revenue_placeholder_details"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/iv_poster"
                app:layout_constraintTop_toBottomOf="@+id/budget_placeholder_movie_details" />

            <TextView
                android:id="@+id/revenue_value_movie_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/revenue_placeholder_movie_details"
                app:layout_constraintStart_toEndOf="@+id/revenue_placeholder_movie_details"
                app:layout_constraintTop_toTopOf="@+id/revenue_placeholder_movie_details"
                tools:text="@string/revenue_value_details" />

            <TextView
                android:id="@+id/release_date_placeholder_movie_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@string/release_date_placeholder_details"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/iv_poster"
                app:layout_constraintTop_toBottomOf="@+id/revenue_placeholder_movie_details" />

            <TextView
                android:id="@+id/release_date_value_movie_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/release_date_placeholder_movie_details"
                app:layout_constraintStart_toEndOf="@+id/release_date_placeholder_movie_details"
                app:layout_constraintTop_toTopOf="@+id/release_date_placeholder_movie_details"
                tools:text="@string/release_date_value_details" />

            <TextView
                android:id="@+id/overview_movie_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_poster"
                tools:text="@string/movie_overview_details" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/write_review_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/overview_movie_details"
                android:text="@string/details_write_review_btn" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/write_review_btn"
                app:layout_constraintStart_toStartOf="parent"
                android:hint="@string/et_review_hint"
                android:gravity="top|left"
                android:minHeight = "100dp"
                android:visibility="invisible" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/send_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/et_review"
                app:backgroundTint="@color/blue"
                android:text="@string/btn_send"
                android:visibility="invisible" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <FrameLayout
        android:id="@+id/detailsLoadingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/loading_background"
        android:visibility="gone"
        tools:visibility="visible">
        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>
</FrameLayout>